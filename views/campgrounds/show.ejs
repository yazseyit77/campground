<%- include("../partials/header") -%>

<div class="container">
    <div class="row" style="padding-top: 25px;">
        <div class="col-md-3">
            <p class="lead">Campground</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-responsive" style="max-width: 70%" src="<%= camp.img %>" />
                <div class="figure-caption">
                    <h4 class="pull-right">$16/night</h4>
                    <h3><a href=""><%= camp.name %></a></h3>
                    <p><%= camp.description %></p>
                </div>
            </div>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <a class="btn btn-success" href="/camps/<%= camp._id %>/comments/new">Leave Comment</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>- <%= comment.text %></p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <a href="/camps">Go Back</a>
</div>
<%- include("../partials/footer") -%>